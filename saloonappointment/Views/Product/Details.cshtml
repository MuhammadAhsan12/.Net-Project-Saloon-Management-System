@model saloonappointment.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/Dashboard_Layout.cshtml";
}

<section class="crudsec">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="mainBox">
                    <h2>Details @Html.DisplayFor(model => model.Product_Name)</h2>

                    <div>
                        
                        <hr />
                        <div class="row">
                            <div class="col-lg-9 col-12">
                                <dl class="dl-horizontal">
                                    <div class="row">
                                        <div class="col-lg-3 col-md-6 col-12">
                                            <dt>@Html.DisplayNameFor(model => model.Product_Name) </dt>
                                            <dd> @Html.DisplayFor(model => model.Product_Name)</dd>
                                        </div>

                                        <div class="col-lg-3 col-md-6 col-12">
                                            <dt> @Html.DisplayNameFor(model => model.Product_Price) </dt>
                                            <dd>  @Html.DisplayFor(model => model.Product_Price)</dd>
                                        </div>

                                        <div class="col-lg-3 col-md-6 col-12">
                                            <dt> @Html.DisplayNameFor(model => model.Product_Manufect_Date) </dt>
                                            <dd> @Html.DisplayFor(model => model.Product_Manufect_Date)</dd>
                                        </div>

                                        <div class="col-lg-3 col-md-6 col-12">
                                            <dt>  @Html.DisplayNameFor(model => model.Product_Expiry_Date)</dt>
                                            <dd>@Html.DisplayFor(model => model.Product_Expiry_Date)</dd>
                                        </div>

                                        <div class="col-lg-3 col-md-6 col-12">
                                            <dt> @Html.DisplayNameFor(model => model.Product_Qty)</dt>
                                            <dd> @Html.DisplayFor(model => model.Product_Qty)</dd>
                                        </div>

                                        <div class="col-lg-3 col-md-6 col-12">
                                            <dt>@Html.DisplayNameFor(model => model.Product_Benifit) </dt>
                                            <dd>  @Html.DisplayFor(model => model.Product_Benifit)</dd>
                                        </div>



                                        <div class="col-lg-3 col-md-6 col-12">
                                            <dt> @Html.DisplayNameFor(model => model.Product_Category.Prod_Category_Name) </dt>
                                            <dd>  @Html.DisplayFor(model => model.Product_Category.Prod_Category_Name) </dd>
                                        </div>

                                        <div class="col-lg-3 col-md-6 col-12">
                                            <dt>@Html.DisplayNameFor(model => model.Product_Desc) </dt>
                                            <dd> @Html.DisplayFor(model => model.Product_Desc)</dd>
                                        </div>
                                    </div>
                                    
                                </dl>
                            </div>

                            <div class="col-lg-3 col-12">

                                <div class="col-lg-3 col-md-6 col-12">
                                    <dt>  @Html.DisplayNameFor(model => model.Product_Img) </dt>
                                    <dd>    <img src="@Url.Content(Model.Product_Img)" width="200" height="150" alt="Alternate Text" /> </dd>
                                </div>
                            </div>
                        </div>
                    </div>
                    <p>
                        @Html.ActionLink("Edit", "Edit", new { id = Model.Product_Id }, new { @class = "editbtn" }) |
                        @Html.ActionLink("Back to List", "Index" )
                    </p>

                </div>
            </div>
        </div>
    </div>
</section>