@model saloonappointment.Client

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/Dashboard_Layout.cshtml";
}

<section class="crudsec">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="mainBox">
                    <h2>Update Customer</h2>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Client_Id)

                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-12">
                                <div class="row">
                                    <div class="col-lg-6 col-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Client_Name, htmlAttributes: new { @class = "control-label col-md-12" })
                                            @Html.EditorFor(model => model.Client_Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Customer Name" } })
                                            @Html.ValidationMessageFor(model => model.Client_Name, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Client_Username, htmlAttributes: new { @class = "control-label col-md-12" })

                                            @Html.EditorFor(model => model.Client_Username, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Customer Username" } })
                                            @Html.ValidationMessageFor(model => model.Client_Username, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>


                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Client_Email, htmlAttributes: new { @class = "control-label col-md-12" })

                                            @Html.EditorFor(model => model.Client_Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Customer Email" } })
                                            @Html.ValidationMessageFor(model => model.Client_Email, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">

                                            @Html.LabelFor(model => model.Client_Password, htmlAttributes: new { @class = "control-label col-md-12" })
                                            @Html.EditorFor(model => model.Client_Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Customer Password" } })
                                            @Html.ValidationMessageFor(model => model.Client_Password, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Client_Contact_No, htmlAttributes: new { @class = "control-label col-md-12" })

                                            @Html.EditorFor(model => model.Client_Contact_No, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Customer Contactno" } })
                                            @Html.ValidationMessageFor(model => model.Client_Contact_No, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Client_Address, htmlAttributes: new { @class = "control-label col-md-12" })

                                            @Html.EditorFor(model => model.Client_Address, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Customer Address" } })
                                            @Html.ValidationMessageFor(model => model.Client_Address, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <input type="submit" value="Update Customer" class="btn btn-warning" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-12">
                                <div class="imgBox">
                                    <img src="~/Content/imgs/bridal1.jpg" alt="Alternate Text" />
                                </div>
                            </div>
                        </div>

                       
                    </div>
                    }

                    <div class="backbtn">
                        @Html.ActionLink("Back to List", "Index")
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>