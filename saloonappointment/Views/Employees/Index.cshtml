@model IEnumerable<saloonappointment.Employee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Dashboard_Layout.cshtml";
}

<section class="crudsec">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="mainBox">
                    <h2>Employee Records</h2>

                    <p class="createbtn">
                        @Html.ActionLink("Create New", "Create")
                    </p>
                    @using (Html.BeginForm("Index", "Employees", FormMethod.Post))
                    {
                        <div class=" row form-horizontal searchdiv">

                            <div class="col-lg-3 p-0">
                                @Html.TextBox("searchTxt", null, new { @class = "form-control searchbar", @placeholder = "Search Employee Name", @style = "max-width:100%" })
                            </div>
                            <div class="col-lg-1 p-0">
                                <button class="btn searchbtn" type="submit">Search</button>
                            </div>
                        </div>
                    }
                    <table class="table">
                        <tr class="thead">
                            <th>
                                @Html.DisplayNameFor(model => model.Emp_Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Emp_Username)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Emp_Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Emp_Password)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Emp_Job_Title)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Emp_Contact_No)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Emp_Image)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Emp_Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Emp_Username)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Emp_Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Emp_Password)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Emp_Job_Title)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Emp_Contact_No)
                                </td>
                                <td>
                                    <img src="@Url.Content(item.Emp_Image)" alt="Emp Image" class="emplistimg" />
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Emp_Id }, new { @class = "editbtn" }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Emp_Id }, new { @class = "detailbtn" }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Emp_Id }, new { @class = "deletebtn" })
                                </td>
                            </tr>
                        }

                    </table>

                </div>
            </div>
        </div>
    </div>
</section>